{
  "name": "sqlserver-test",
  "version": "1.0.0",
  "private": true,
  "description": "SQL Server test environment",
  "scripts": {
    "up": "docker compose up -d mssql",
    "down": "docker compose down",
    "clean": "docker compose down -v --remove-orphans && rm -rf data/ backups/",
    "wait": "node scripts/wait-for-sqlserver.js",
    "detect": "node scripts/detect-env.js",
    "init": "node scripts/apply-ddl.js",
    "test:connection": "node scripts/test-connection.js",
    "test:tables": "node scripts/verify-tables.js",
    "test:data": "node scripts/verify-data.js",
    "test:transaction": "node scripts/test-transaction.js",
    "test:isolation": "node scripts/test-isolation.js",
    "seed": "node scripts/seed-data.js",
    "seed:small": "node scripts/seed-data.js small",
    "seed:medium": "node scripts/seed-data.js medium",
    "seed:large": "node scripts/seed-data.js large",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "test": "npm run up && npm run wait && npm run test:connection && npm run init && npm run test:tables && npm run test:data",
    "ci": "npm run up && npm run wait && npm run test:connection && npm run init && npm run test:tables && npm run test:data && npm run clean"
  }
}
